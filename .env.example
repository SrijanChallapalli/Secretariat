# ===========================================================================
#  Secretariat — Environment Variables
#  Copy to .env:  cp .env.example .env
#  NEVER commit .env — it is git-ignored.
# ===========================================================================

# ── Network RPCs ──────────────────────────────────────────────────────────
# Public testnet RPC endpoints (defaults work out of the box)
RPC_0G=https://evmrpc-testnet.0g.ai
RPC_ADI=https://rpc.ab.testnet.adifoundation.ai/
CHAIN_ID_0G=16602
CHAIN_ID_ADI=99999

# ── Private Keys (NEVER commit real keys) ─────────────────────────────────
# Testnet deployer wallet — needs gas on both chains
DEPLOYER_PRIVATE_KEY=
# Oracle pipeline — falls back to DEPLOYER_PRIVATE_KEY if empty
ORACLE_PRIVATE_KEY=
# 0G Storage uploader — only needed for model bundle uploads
OG_UPLOADER_PRIVATE_KEY=

# ── 0G Decentralized Storage ──────────────────────────────────────────────
INDEXER_RPC=https://indexer-storage-testnet-turbo.0g.ai
RPC_URL_0G=https://evmrpc-testnet.0g.ai

# ── Contract Addresses ────────────────────────────────────────────────────
# Auto-filled after deploy:  npm run env:from-broadcast
# Leave empty until you deploy; the app gracefully falls back to 0x0.
NEXT_PUBLIC_ADI_TOKEN=
NEXT_PUBLIC_HORSE_INFT=
NEXT_PUBLIC_BREEDING_MARKETPLACE=
NEXT_PUBLIC_SYNDICATE_VAULT=
NEXT_PUBLIC_HORSE_ORACLE=
NEXT_PUBLIC_SYNDICATE_VAULT_FACTORY=
NEXT_PUBLIC_AGENT_INFT=
NEXT_PUBLIC_AGENT_EXECUTOR=

# ── App / Frontend ────────────────────────────────────────────────────────
# WalletConnect project ID (exactly 32 chars) — get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_ID=
# Public URLs for the Next.js app and the Express API server
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SERVER_URL=http://localhost:4000

# ── Server ────────────────────────────────────────────────────────────────
PORT=4000
