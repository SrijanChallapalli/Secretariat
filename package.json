{
  "name": "secretariat",
  "private": true,
  "workspaces": [
    "contracts",
    "app",
    "server"
  ],
  "scripts": {
    "check": "npm run build --workspaces --if-present && cd contracts && forge build && forge fmt --check .",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "deploy:og": "cd contracts && forge script script/Deploy.s.sol:DeployScript --rpc-url $RPC_0G --broadcast --with-gas-price 3000000000 --priority-gas-price 2000000000",
    "deploy:adi": "cd contracts && forge script script/Deploy.s.sol:DeployScript --rpc-url $RPC_ADI --broadcast",
    "seed:demo": "tsx scripts/seed-demo.ts",
    "demo:reset": "tsx scripts/demo-reset.ts",
    "env:from-broadcast": "tsx scripts/write-env-from-broadcast.ts",
    "generate:training": "tsx scripts/generate-training-data.ts",
    "sync-env": "cp .env app/.env 2>/dev/null || true",
    "run:server": "cd server && npm run dev",
    "run:app": "cd app && npm run dev"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "tsx": "^4.7.0",
    "viem": "^2.0.0"
  }
}
